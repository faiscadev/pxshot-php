{
    "name": "pxshot/pxshot",
    "description": "Official PHP SDK for Pxshot - Screenshot API",
    "type": "library",
    "license": "MIT",
    "keywords": ["pxshot", "screenshot", "api", "sdk", "web capture"],
    "homepage": "https://pxshot.com",
    "authors": [
        {
            "name": "Pxshot",
            "email": "support@pxshot.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Pxshot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pxshot\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=8"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
